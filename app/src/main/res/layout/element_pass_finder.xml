        android:scaleType="fitXY"
        android:src="@drawable/karl_popper"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="wrap_content"
            android:layout_height="16dp">
            <ImageButton
                android:layout_width="10dp"
                android:padding="4dp"
                android:src="@drawable/micro_oval"
                android:layout_height="10dp" />
            <ImageButton
                android:layout_width="10dp"
                android:padding="4dp"
                android:src="@drawable/micro_oval"
                android:layout_height="10dp" />
            <ImageButton
                android:layout_width="10dp"
                android:padding="4dp"
                android:src="@drawable/micro_oval"
                android:layout_height="10dp" />
            <ImageButton
                android:layout_width="10dp"
                android:padding="4dp"
                android:src="@drawable/micro_oval"
                android:layout_height="10dp" />
            <ImageButton
                android:layout_width="10dp"
                android:padding="4dp"
                android:src="@drawable/micro_oval"
                android:layout_height="10dp" />
            <ImageButton
                android:layout_width="10dp"
                android:padding="4dp"
                android:src="@drawable/micro_oval"
                android:layout_height="10dp" />
            <ImageButton
                android:layout_width="10dp"
                android:padding="4dp"
                android:src="@drawable/micro_oval"
                android:layout_height="10dp" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp">

    </LinearLayout>
</LinearLayout>
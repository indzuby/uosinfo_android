<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="80dp"
        android:adjustViewBounds="true"
        android:background="@color/department_bg"
        android:id="@+id/department_image"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/department_bg"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/department_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:singleLine="true"
            android:text="학과 타이틀입니다."
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@+id/department_title"
            android:id="@+id/department_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginBottom="8dp"
            android:text="학과 내용입니다" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/model_container"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_height="12dp">
            <include layout="@layout/element_enter_model"/>
            <include layout="@layout/element_enter_model"/>
            <include layout="@layout/element_enter_model"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/information"
            android:layout_width="wrap_content"
            android:background="@null"
            android:src="@mipmap/information"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>